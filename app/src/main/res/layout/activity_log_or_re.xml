<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

   <androidx.viewpager.widget.ViewPager
       android:id="@+id/log_or_re_viewpager"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="7"/>
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:id="@+id/log_radiogroup"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/one_tip"
                android:button="@null"
                android:background="@drawable/bander_sel"
                android:layout_width="9dp"
                android:layout_height="9dp"
                />
            <RadioButton
                android:id="@+id/two_tip"
                android:layout_marginLeft="6dp"
                android:button="@null"
                android:background="@drawable/bander_un_sel"
                android:layout_width="9dp"
                android:layout_height="9dp"
                />
            <RadioButton
                android:id="@+id/three_tip"
                android:layout_marginLeft="6dp"
                android:button="@null"
                android:background="@drawable/bander_un_sel"
                android:layout_width="9dp"
                android:layout_height="9dp"
                />
            <RadioButton
                android:id="@+id/four_tip"
                android:layout_marginLeft="6dp"
                android:button="@null"
                android:background="@drawable/bander_un_sel"
                android:layout_width="9dp"
                android:layout_height="9dp"
                />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/log_or_re_regit_btn"
            android:textColor="#fff"
            android:text="注册"
            android:background="@drawable/log_or_re_regiter_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="12dp"
            android:id="@+id/log_or_re_login_btn"
            android:textColor="@color/petColor"
            android:text="登录"
            android:background="@drawable/log_or_re_login_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>